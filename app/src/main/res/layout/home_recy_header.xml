    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.bigkoo.convenientbanner.ConvenientBanner xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/convenientBanner"
            android:layout_width="match_parent"
            android:layout_height="400px"
            app:canLoop="true" />

        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="70px">

            <ImageView
                android:id="@+id/iv_index_scan"
                android:layout_width="46px"
                android:layout_height="46px"
                android:layout_centerVertical="true"
                android:layout_marginLeft="30px"
                android:src="@mipmap/ic_scan" />

            <EditText
                android:id="@+id/ev_search_condition"
                style="@style/MyEditTextStyle"
                android:layout_width="516px"
                android:layout_height="56px"
                android:layout_centerInParent="true"
                android:drawableLeft="@mipmap/search"
                android:gravity="center_vertical"
                android:hint="请输入你想要的商品"
                android:textSize="30px" />

            <ImageView
                android:id="@+id/iv_index_location"
                android:layout_width="46px"
                android:layout_height="46px"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="30px"
                android:src="@mipmap/address" />

        </com.zhy.autolayout.AutoRelativeLayout>
    </com.zhy.autolayout.AutoRelativeLayout>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:orientation="vertical">

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="197px"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_category_1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawableTop="@mipmap/garment"
                android:gravity="center"
                android:padding="15px"
                android:text="服装"
                android:textSize="30px" />

            <TextView
                android:id="@+id/tv_category_2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawableTop="@mipmap/supermarket"
                android:gravity="center"
                android:padding="15px"
                android:text="超市"
                android:textSize="30px" />

            <TextView
                android:id="@+id/tv_category_3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawableTop="@mipmap/recharge"
