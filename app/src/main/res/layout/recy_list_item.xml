<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp">

    <!--<android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardBackgroundColor="#ffffff"
        app:cardCornerRadius="16dp"
        app:cardElevation="16dp">-->


    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:padding="20px">

        <ImageView
            android:id="@+id/iv_index_store"
            android:layout_width="150px"
            android:layout_height="150px"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/tv_index_storeName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20px"
            android:layout_toRightOf="@+id/iv_index_store"
            android:text="sssssssssssss"
            android:textColor="#333333"
            android:textSize="30px" />

        <TextView
            android:id="@+id/tv_index_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="11891.32km"
            android:textColor="#666666"
            android:textSize="24px" />

        <!--<TextView
            android:id="@+id/SeekBar"
            android:text="SeekBar,先用textview代替"
            android:layout_marginLeft="20px"
            android:layout_below="@+id/tv_index_storeName"
            android:layout_toRightOf="@+id/iv_index_store"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />-->

        <RatingBar
            android:id="@+id/app_ratingbar"
            style="@style/MyRatingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_index_storeName"
            android:layout_marginLeft="20px"
            android:layout_marginTop="20px"
            android:layout_toRightOf="@+id/iv_index_store"
            android:isIndicator="true"
            android:numStars="5"
            android:rating="0"
            android:stepSize="0.1" />

        <TextView
            android:id="@+id/tv_index_salesVolume_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_index_storeName"
            android:layout_marginLeft="15px"
            android:layout_marginTop="20px"
            android:layout_toRightOf="@+id/app_ratingbar"
            android:text="月销量"
            android:textColor="#666666"
            android:textSize="24px" />

        <TextView
            android:id="@+id/tv_index_salesVolume"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_index_storeName"
            android:layout_marginLeft="15px"
            android:layout_marginTop="20px"
            android:layout_toRightOf="@+id/tv_index_salesVolume_txt"
            android:text="113"
            android:textColor="#666666"
            android:textSize="24px" />

        <TextView
            android:id="@+id/tv_index_store_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_index_store"
            android:layout_alignLeft="@+id/app_ratingbar"
            android:text="xxxxxxxxxxxx"
            android:textColor="#666666"
            android:textSize="24px" />

    </com.zhy.autolayout.AutoRelativeLayout>

</FrameLayout>